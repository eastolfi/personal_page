doctype html
html(lang='en', xmlns='http://www.w3.org/1999/xhtml', xmlns:fb='https://www.facebook.com/2008/fbml', itemscope='itemscope', itemtype='http://schema.org/Product')
    include ../includes/head
    body(ng-controller="AppController")
        #modalWaiter.modal.fade(tabindex="-1", role="dialog", aria-labelledby="modalWaiterLabel" aria-hidden="true")
                .modal-dialog.modal-sm
                    .modal-content
                        .modal-header
                            h4#modalWaiterLabel.modal-title
                                | Cargando...
                        .modal-body(style="text-align: center")
                            img.modalLoaderImg(src="img/loaders/ajax-loader-gallery.gif")
    
        .content-wrapper
            header
                .banner
                    a(href="index.html")
                        //img(src="/img/banner.jpeg")
            nav.navbar.navbar-default(data-ng-include="'views/header.html'", data-role="navigation")
            
            .container-fluid.wrapper.main-content-wrapper
                alert(ng-repeat="alert in alerts", type="alert.type", class="enter-slide, leave-slide", close="closeAlert($index)", ng-cloak) {{alert.msg}}
                    
                block content
            
            footer(data-ng-include="'views/footer.html'")
        include ../includes/scripts